    <h1 class= "text-center"><%= @cocktail.name %></h1>

<div class="container">
  <div class="row">

    <div class="col-xs-12 col-sm-offset-3 col-sm-6">
    <div class="description">

      </div>
    </div>

    <div class="col-xs-12 col-sm-offset-3 col-sm-6">
    <div class="text-center description">
      <%= link_to "Back to list", cocktails_path, class: "btn btn-success" %>
      <%= link_to "Delete", cocktail_path(@cocktail),
      method: :delete, class: "btn btn-primary",
      data: { confirm: "Are you sure?"} %>
      </div>
    </div>

  </div>
</div>

<div class="container">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Ingredient</th>
      <th>Amount</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doses.each do |dose| %>
      <tr>
        <td><%= dose.ingredient.name %></td>
        <td><%= dose.description %></td>
        <td><%= link_to 'Destroy', dose_path(dose),
        method: :delete,
        data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= render "doses/form" %>
