<div class="wrapper">
  <div class="container">
    <div class="row">

      <div class="col-xs-12 col-sm-6">
        <h2 class= "text-center"><%= @cocktail.name %></h2>
      </div>

    </div>


    <div class="row">

      <div class="col-xs-12 col-sm-6">
        <div  class= "text-center">
          <div>
          <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
          </div>
          <div class="description">
            <p> <em> <%= @cocktail.description %> </em></p>
          </div>
        </div>

        <div class="text-center description">
          <%= link_to "Back to list", cocktails_path, class: "btn btn-primary" %>
          <%= link_to "Delete", cocktail_path(@cocktail),
          method: :delete, class: "btn btn-primary",
          data: { confirm: "Are you sure?"} %>
        </div>
      </div>


        <div class="col-xs-12 col-sm-6">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Ingredient</th>
                <th>Amount</th>
                <th></th>
              </tr>
            </thead>

            <tbody>
              <% @doses.each do |dose| %>
              <tr>
                <td><%= dose.ingredient.name %></td>
                <td><%= dose.description %></td>
                <td>
                  <%= link_to dose_path(dose), method: :delete,
                  data: { confirm: 'Are you sure?' } do %>
                  <i class="fa fa-trash" aria-hidden="true"></i>
                  <% end %>
                </td>
              </tr>

              <% end %>
            </tbody>
          </table>

          <div class="form-doses">
            <%= render "doses/form"%>
          </div>

        </div>

      </div>

    </div>
  </div>

</div>




